<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lerrrrmps.myfirstapp.MainActivity"
    android:weightSum="1">

    <com.example.lerrrrmps.myfirstapp.ControlStickViewRight
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id ="@+id/testJoystickRight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.example.lerrrrmps.myfirstapp.ControlStickView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id ="@+id/testJoystickLeft"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="BREAK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:id="@+id/button3"
        android:elevation="5dp"
        android:rotation="90"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp"
        android:background="@android:color/holo_red_dark" />
</RelativeLayout>
